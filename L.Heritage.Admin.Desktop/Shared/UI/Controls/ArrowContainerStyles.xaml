<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/App/GlobalStyles.xaml" />
        <ResourceDictionary Source="/Shared/UI/Controls/ScalableEmptyButtonStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="svgc:SvgIcon" x:Key="Arrow">
        <Setter Property="UriSource" Value="/Shared/UI/Icons/arrowPrev.svg" />
        <Setter Property="Fill" Value="{StaticResource BrushRed2}"/>
    </Style>

    <Style TargetType="svgc:SvgIcon" x:Key="LeftArrow" BasedOn="{StaticResource Arrow}">
        <Setter Property="UriSource" Value="/Shared/UI/Icons/arrowPrev.svg" />
    </Style>

    <Style TargetType="svgc:SvgIcon" x:Key="RightArrow" BasedOn="{StaticResource Arrow}">
        <Setter Property="UriSource" Value="/Shared/UI/Icons/arrowNext.svg" />
    </Style>

</ResourceDictionary>