<UserControl x:Class="L.Heritage.Admin.Desktop.Shared.UI.Controls.Input"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:L.Heritage.Admin.Desktop.Shared.UI.Controls"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <ResourceDictionary Source="InputStyles.xaml" />
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="{Binding Label}"/>
        <TextBox Grid.Column="1" Text="{Binding Text}"/>
        
    </Grid>
</UserControl>
